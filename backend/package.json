{
  "name": "loja-tenis-fgt-backend",
  "version": "1.0.0",
  "description": "Backend completo para loja de tênis com sistema de autenticação, diferentes níveis de acesso e compliance LGPD",
  "main": "servidor.js",
  "scripts": {
    "start": "node servidor.js",
    "dev": "nodemon servidor.js",
    "dev:alt": "PORT=7777 nodemon servidor.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup-db": "node -e \"require('./banco/conexao'); console.log('Banco configurado')\"",
    "create-tables": "mysql -u root -p loja_tenis_fgt < banco/criar_tabelas.sql",
    "insert-data": "mysql -u root -p loja_tenis_fgt < banco/inserir_dados.sql",
    "reset-db": "npm run create-tables && npm run insert-data",
    "backup": "mysqldump -u root -p loja_tenis_fgt > backups/backup_$(date +%Y%m%d_%H%M%S).sql",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'Build não necessário para aplicação Node.js'",
    "logs": "tail -f logs/aplicacao.log",
    "health": "curl http://localhost:5000/api/health"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "authentication",
    "authorization",
    "ecommerce",
    "api",
    "rest",
    "backend",
    "loja",
    "tenis",
    "lgpd",
    "carrinho",
    "promocoes"
  ],
  "author": "FGT - Loja de Tênis",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.7",
    "twilio": "^4.23.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fgt/loja-tenis-backend.git"
  },
  "bugs": {
    "url": "https://github.com/fgt/loja-tenis-backend/issues"
  },
  "homepage": "https://github.com/fgt/loja-tenis-backend#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
